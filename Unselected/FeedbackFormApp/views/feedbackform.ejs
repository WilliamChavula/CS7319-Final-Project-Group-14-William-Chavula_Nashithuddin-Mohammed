<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/home.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">FeedbackForm</a>
            <a class="btn btn-primary" href="/" role="button">Logout</a>
        </div>
    </nav>
    <div class="container">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">FeedbackForm</h5>
                <form action="/feedback/setFeedback" method="POST">
                    <div class="mb-3">
                        <label for="inputSMUID" class="form-label">SMU ID</label>
                        <input name="smuid" type="number" class="form-control" id="inputSMUID"
                            aria-describedby="emailHelp" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputProfName" class="form-label">Name of the Professor</label>
                        <input name="profName" type="text" class="form-control" id="inputProfName" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputCourseTitle" class="form-label">Course Title</label>
                        <input name="courseTitle" type="text" class="form-control" id="inputCourseTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputCourseCode" class="form-label">Course Code</label>
                        <input name="courseCode" type="text" class="form-control" id="inputCourseCode" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputFeedback" class="form-label">Feedback</label>
                        <textarea name="feedback" class="form-control" id="inputFeedback" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>


    </div>
    <script>
        console.log(document.referrer)
        if (!localStorage.getItem('loggedIn')) {
            if (document.referrer.includes("login")) {
                let loggedIn = "<%= loggedIn %>"
                localStorage.setItem("loggedIn", loggedIn)
            } else {
                window.location.href = "/login"
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>